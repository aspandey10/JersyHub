@model JersyHub.Models.Product

<form method="post">
    <div class="container mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">Product Details</h2>
            <hr />
        </div>
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="row g-0 align-items-center">
                <!-- Image Section (Left) -->
                <div class="col-md-4 text-center">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" style="max-width: 100%; height: auto;" alt="Product Image">
                </div>

                <!-- Details Section (Right) -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title text-primary">@Model.ProductName</h2>
                        <hr>
                        <p class="card-text"><strong>Type:</strong> @Model.ProductType</p>
                        <p class="card-text"><strong>Team:</strong> @Model.Team</p>
                        <p class="card-text"><strong>League:</strong> @Model.Category.Name</p>
                        <p class="card-text"><strong>Edition:</strong> @Model.Edition</p>
                        <p class="card-text"><strong>Year:</strong> @Model.Year</p>
                        <p class="card-text"><strong>Price:</strong> <span class="text-success fw-bold">Rs. @Model.Price</span></p>

                        <div class="row mt-4">
                            <div class="col-md-3">
                                <button type="submit" disabled class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                            <div class="col-md-3">
                                <a asp-controller="Home" asp-action="Index" asp-area="Customer" class="btn btn-outline-secondary w-100 py-2 text-uppercase fw-semibold">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

