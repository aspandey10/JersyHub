@using JersyHub.Domain.Entities
@model ShoppingCart


<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">Product Details</h2>
            <hr />
        </div>
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="row g-0 align-items-center">
                <!-- Image Section (Left) -->
                <div class="col-md-4 text-center">
                    <img src="@Model.Product.ImageUrl" class="img-fluid rounded-start" style="max-width: 100%; height: auto;" alt="Product Image">
                </div>

                <!-- Details Section (Right) -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title text-primary">@Model.Product.ProductName</h2>
                        <hr>
                        <p class="card-text"><strong>Type:</strong> @Model.Product.ProductType</p>
                        
                        <p class="card-text"><strong>League:</strong> @Model.Product.Category.Name</p>
                        <p class="card-text"><strong>Edition:</strong> @Model.Product.Edition</p>
                        <p class="card-text"><strong>Year:</strong> @Model.Product.Year</p>
                        <p class="card-text"><strong>Price:</strong> <span class="text-success fw-bold">Rs. @Model.Product.Price</span></p>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-3">
                                <button type="submit"  class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                            <div class="col-md-3">
                                <a asp-controller="Home" asp-action="Index" asp-area="Customer" class="btn btn-outline-secondary w-100 py-2 text-uppercase fw-semibold">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

